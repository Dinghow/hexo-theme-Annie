<div class="page-header">
	<div class="blog-text-center">
		<% if (page.type === "tags") { %>
			
			<i class="fa fa-pencil-square-o">There are <%= site.tags.length %> tags</i>
			
		<% } else if (page.type === "categories") { %>
			
			<i class="fa fa-pencil-square-o">There are <%= site.categories.length %> categories</i>
			
		<% } else { %>
			
			<%= page.title %>

		<% } %>  	 		
	</div>    	 		
</div>  	 		